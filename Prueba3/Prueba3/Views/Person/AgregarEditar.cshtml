@model Prueba3.Models.Person
@{
    ViewBag.Title = "AgregarEditar";
}

<h2>Agregar / Editar</h2>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="~/Semestre/Index">Semestre</a>
        </li>
        <li class="breadcrumb-item active">
            @(Model.PersonId > 0 ? Model.FirstName : "Nuevo Registro")

        </li>
    </ol>

</nav>
@using (Html.BeginForm("Guardar", "Person", FormMethod.Post, new { id = "frm-semestre" }))
{
    @Html.HiddenFor(x => x.PersonId)
    <div class="card">
        <div class="card-header">Informacion del semestre</div>
        <div class="card-body">
            <div class="form-group">
                @Html.Label("Id")
                @Html.TextBoxFor(x => x.PersonId, new { @class = "form-control", disabled = true })
            </div>
            <div class="form-group">
                @Html.Label("Nombre")
                @Html.TextBoxFor(x => x.FirstName, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.FirstName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.Label("Segundo nombre")
                @Html.TextBoxFor(x => x.MiddelInitial, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.Label("Apellido")
                @Html.TextBoxFor(x => x.LastName, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.Label("Fecha")
                @Html.TextBoxFor(x => x.DateOfBirth, new { @class = "form-control" })
            </div>
        </div>
    </div>
    <br />
    <div class="text-right">
        <button type="submit" class="btn btn-primary">Grabar</button>
        <a href="~/Person" class="btn btn-danger">Cancelar</a>
    </div>
    <br />
    <br />
}

